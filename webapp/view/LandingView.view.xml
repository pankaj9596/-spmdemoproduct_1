<mvc:View controllerName="com.spm.suppilerportal.controller.LandingView" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m" xmlns:layout="sap.ui.layout" xmlns:form="sap.ui.layout.form">
    <Page id="page" backgroundDesign="List" enableScrolling="false" showHeader="false" title="{i18n>title}">
        <content>
            <layout:Grid vSpacing="2" hSpacing="2" defaultSpan="XL12 L12 M12 S12" class="sapUiSmallMargin">
                <VBox>
                    <layout:VerticalLayout class="sapUiContentPadding" width="100%">
                        <layout:HorizontalLayout class="sapUiContentPadding">
                            <Image class="sapUiSmallMargin" src="/css/image/fo.png" />
                        </layout:HorizontalLayout>
                        <layout:HorizontalLayout class="sapUiNoContentPadding">
                            <Title level="H1" text="An exciting place for Suppliers." wrapping="true" wrappingType="Hyphenated" />
                        </layout:HorizontalLayout>
                        <layout:HorizontalLayout class="sapUiNoContentPadding">
                            <Title level="H3" text="Join us and be a part of us in the journey." wrapping="true" wrappingType="Hyphenated" />
                        </layout:HorizontalLayout>
                    </layout:VerticalLayout>
                    <layoutData>
                        <layout:GridData span="XL4 L4 M4 S12" visibleOnSmall="false" />
                    </layoutData>
                </VBox>
                <VBox>
                    <FlexBox direction="RowReverse" alignItems="Start">
                        <Image src="/css/image/toplogo.PNG">
                            <layoutData>
                                <layout:GridData span="XL4 L4 M6 S12" linebreak="true" />
                            </layoutData>
                        </Image>
                    </FlexBox>
                    <form:SimpleForm layout="ResponsiveGridLayout" editable="true" adjustLabelSpan="false" singleContainerFullSize="false">
                        <form:content>
                            <VBox>
                                <Label text="User Name" />
                                <Input value="{oLanding>/sUserName}" />
                                <layoutData>
                                    <layout:GridData span="XL8 L4 M6 S12" linebreak="true" />
                                </layoutData>
                            </VBox>
                            <VBox>
                                <Label text="Password" />
                                <Input type="Password" value="{oLanding>/sPassword}" />
                                <layoutData>
                                    <layout:GridData span="XL8 L4 M6 S12" linebreak="true" />
                                </layoutData>
                            </VBox>
                            <VBox>
                                <Button class="btnclass" type="Emphasized" text="Submit" press="onfnpresssubmit" width="100%" />
                                <layoutData>
                                    <layout:GridData span="XL8 L4 M6 S12" linebreak="true" />
                                </layoutData>
                            </VBox>
                            <FlexBox alignItems="Start" justifyContent="Start">
                                <Text class="sapUiNoContentPadding" text="Not a member?">
                                    <layoutData>
                                        <FlexItemData growFactor="1" />
                                        <!-- <layout:GridData span="XL3 L3 M4 S12" linebreak="true" /> -->
                                    </layoutData>
                                </Text>
                                <Link class="sapUiTinyMarginBegin" press="onSignUp" text="Sign up now">
                                    <layoutData>
                                        <FlexItemData growFactor="2" />
                                        <!-- <layout:GridData span="XL2 L2 M2 S4" linebreak="true" /> -->
                                    </layoutData>
                                </Link>
                                <layoutData>
                                    <layout:GridData span="XL12 L12 M12 S12" linebreak="true" />
                                </layoutData>
                            </FlexBox>
                            <FlexBox alignItems="Start" justifyContent="Start">
                                <Link class="sapUiNoContentPadding sapUiNoMargin" press="onfnForgotPassword" text="Forgot Password" />
                                <layoutData>
                                    <layout:GridData span="XL12 L12 M12 S12" linebreak="true" />
                                </layoutData>
                            </FlexBox>
                        </form:content>
                    </form:SimpleForm>
                    <layoutData>
                        <layout:GridData span="XL8 L8 M8 S12" />
                    </layoutData>
                </VBox>
            </layout:Grid>
